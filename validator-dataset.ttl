@prefix : <https://linked.data.gov.au/def/loci/shapes/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix loci: <http://linked.data.gov.au/def/loci#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .


#
#   Dataset
#
<Requirement-D-title>
	a sh:NodeShape ;
	sh:targetClass loci:Dataset ;
    sh:message "Requirement D-title: Each Dataset MUST have one and only one title, a text literal, indicated using the skos:prefLabel property" ;
    sh:property [
        sh:path skos:prefLabel ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
    ]
.

<Requirement-D-defn>
	a sh:NodeShape ;
	sh:targetClass loci:Dataset ;
    sh:message "Requirement D-defn: Each Dataset MUST have one and only one definition, a text literal, indicated using the skos:definition property" ;
    sh:property [
        sh:path skos:definition ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:or ( [ sh:datatype xsd:string ] [ sh:datatype rdf:langString ] ) ;
    ]
.

<Requirement-D-id>
	a sh:NodeShape ;
	sh:targetClass loci:Dataset ;
    sh:message "Requirement D-id: Each Dataset MUST have one and only one identifier, an xsd:token, indicated using the dcterms:identifier property" ;
    sh:property [
        sh:path dcterms:identifier ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:token ;
    ]
.

<Requirement-D-pbundle>
	a sh:NodeShape ;
	sh:targetClass loci:Dataset ;
    sh:message "Requirement D-pbundle: Each Dataset MUST indicate that it is within a prof:Bundle by an instance of one being indicated with the prov:asInBundle property" ;
    sh:property [
        sh:path prov:asInBundle ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class prov:Bundle
    ]
.

<Requirement-D-derived>
	a sh:NodeShape ;
	sh:targetClass loci:Dataset ;
    sh:message "Requirement D-derived: If a Dataset is derived from anotehr Dataset, it SHOULD indicate that that other dataset, a general DCAT Dataset instnace, with a prov:wasDerivedFrom property" ;
    sh:property [
        sh:path prov:wasDerivedFrom ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class dcat:Dataset
    ]
.
